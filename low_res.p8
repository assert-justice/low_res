pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
plr1 = nil
function _init()
	poke(0x5f2c,3)
	inp={}
	for i=0,5 do add(inp,0)end
	plr1 = {x=28,y=28,dir=1,spd=0.5,inp=inp,num=0}
end

function _draw()
	cls()
	plrdraw(plr1)
end

function _update60()
	input(plr1)
	plrmove(plr1)
end

function plrmove(plr)
	if plr1.inp[0]>0 then plr1.x-=plr1.spd end
	if plr1.inp[1]>0 then plr1.x+=plr1.spd end
	if plr1.inp[2]>0 then plr1.y-=plr1.spd end
	if plr1.inp[3]>0 then plr1.y+=plr1.spd end
end

function input(plr)
	for i=0,5 do
		if btn(i,plr.num) then
			plr.inp[i]+=1
		else
			plr.inp[i]=0
		end
	end
end

function plrdraw(plr)
	spr(7,plr.x,plr.y,1,1,1,false,false)
end

